{{!-- GM Approval Queue Template --}}
<div class="gm-approval-queue">
  <header class="queue-header">
    <h2>Time Log Approval Queue</h2>
    <div class="queue-controls">
      <button type="button" class="refresh-btn" title="Refresh">
        <i class="fas fa-sync-alt"></i> Refresh
      </button>
      {{#if hasApprovals}}
        <button type="button" class="approve-all-btn" title="Approve All">
          <i class="fas fa-check-double"></i> Approve All
        </button>
        <button type="button" class="clear-all-btn" title="Clear Processed">
          <i class="fas fa-trash"></i> Clear Processed
        </button>
      {{/if}}
    </div>
  </header>

  <div class="queue-content">
    {{#if hasApprovals}}
      <div class="queue-summary">
        <p><strong>{{totalPending}}</strong> pending approval{{#unless (eq totalPending 1)}}s{{/unless}}</p>
      </div>

      <div class="approval-list">
        {{#each pendingApprovals}}
          <div class="approval-item {{status}}" data-approval-id="{{id}}">
            <div class="approval-header">
              <div class="task-info">
                <h4>{{taskName}}</h4>
                <span class="task-id">Task ID: {{taskId}}</span>
              </div>
              <div class="status-badge status-{{status}}">{{status}}</div>
            </div>

            <div class="approval-details">
              <div class="requester-info">
                <strong>Requested by:</strong> {{requestedByName}}
                <small>({{requestedBy}})</small>
              </div>
              
              <div class="time-entry">
                <div class="duration">
                  <strong>Duration:</strong> 
                  {{#if entry.duration.hours}}{{entry.duration.hours}}h {{/if}}
                  {{#if entry.duration.minutes}}{{entry.duration.minutes}}m{{/if}}
                  {{#if entry.duration.seconds}}{{entry.duration.seconds}}s{{/if}}
                </div>
                
                {{#if entry.description}}
                  <div class="description">
                    <strong>Description:</strong> {{entry.description}}
                  </div>
                {{/if}}
              </div>

              <div class="timestamp">
                <small>Requested: {{dateFormat timestamp}}</small>
              </div>
            </div>

            {{#if (eq status 'pending')}}
              <div class="approval-actions">
                <button type="button" class="approve-btn" data-approval-id="{{id}}" title="Approve Request">
                  <i class="fas fa-check"></i> Approve
                </button>
                <button type="button" class="deny-btn" data-approval-id="{{id}}" title="Deny Request">
                  <i class="fas fa-times"></i> Deny
                </button>
              </div>
            {{/if}}
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="empty-queue">
        <div class="empty-message">
          <i class="fas fa-clipboard-check"></i>
          <h3>No Pending Approvals</h3>
          <p>All time log requests have been processed.</p>
        </div>
      </div>
    {{/if}}
  </div>
</div>

