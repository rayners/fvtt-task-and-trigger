{{!-- Player Task View Template - Read-only view for players to see upcoming events --}}
<div class="player-task-view-content">
  <div class="header">
    <h3>Upcoming Events</h3>
    <button type="button" class="refresh-btn" title="Refresh events">
      <i class="fas fa-sync-alt"></i>
    </button>
  </div>

  {{#if upcomingTasks}}
    <div class="upcoming-events">
      <p class="help-text">
        These are upcoming scheduled events visible to you. GMs control task creation and execution.
      </p>
      
      <div class="task-list">
        {{#each upcomingTasks}}
          <div class="task-item" data-task-id="{{id}}">
            <div class="task-header">
              <h4 class="task-name">{{name}}</h4>
              <div class="task-timing">
                {{#if useGameTime}}
                  <i class="fas fa-clock" title="Game Time"></i>
                {{else}}
                  <i class="fas fa-calendar" title="Real Time"></i>
                {{/if}}
                <span class="next-execution" data-timestamp="{{nextExecution}}">
                  {{formatTime nextExecution}}
                </span>
              </div>
            </div>
            
            {{#if description}}
              <div class="task-description">
                {{description}}
              </div>
            {{/if}}
            
            <div class="task-actions">
              {{#if isRecurring}}
                <span class="recurring-badge">
                  <i class="fas fa-repeat"></i> Recurring
                </span>
              {{/if}}
              
              {{!-- Only show accumulated time actions if this is an accumulated time task --}}
              {{#if ../canLogTime}}
                <button type="button" class="log-time-btn" data-task-id="{{id}}" title="Request time logging">
                  <i class="fas fa-plus"></i> Log Time
                </button>
                <button type="button" class="view-progress-btn" data-task-id="{{id}}" title="View progress">
                  <i class="fas fa-chart-line"></i> Progress
                </button>
              {{/if}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  {{else}}
    <div class="no-events">
      <div class="empty-state">
        <i class="fas fa-calendar-times"></i>
        <h4>No Upcoming Events</h4>
        <p>There are no scheduled events visible to you in the next week.</p>
        <p class="help-text">
          Events are created and managed by your GM. This view will update automatically as new events are scheduled.
        </p>
      </div>
    </div>
  {{/if}}

  <div class="footer">
    <div class="info-section">
      <h5>About This View</h5>
      <ul class="info-list">
        <li><strong>Real Time</strong> <i class="fas fa-calendar"></i> - Events scheduled in real-world time</li>
        <li><strong>Game Time</strong> <i class="fas fa-clock"></i> - Events that advance with game time</li>
        <li><strong>Recurring</strong> <i class="fas fa-repeat"></i> - Events that repeat automatically</li>
      </ul>
      
      {{#if canLogTime}}
        <div class="time-logging-info">
          <h6>Time Logging</h6>
          <p>
            Click <strong>Log Time</strong> to request accumulated time be added to a task. 
            Your GM will review and approve time log requests.
          </p>
        </div>
      {{/if}}
    </div>
  </div>
</div>

