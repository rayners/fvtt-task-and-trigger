{{!-- Time Log Dialog Template - Player interface for requesting time to be logged --}}
<div class="time-log-dialog-content">
  <div class="dialog-header">
    <h3>Log Time Request</h3>
    {{#if task}}
      <div class="task-info">
        <strong>Task:</strong> {{task.name}}
        {{#if task.description}}
          <div class="task-description">{{task.description}}</div>
        {{/if}}
      </div>
    {{else}}
      <div class="task-info error">
        <i class="fas fa-exclamation-triangle"></i>
        Task information not available
      </div>
    {{/if}}
  </div>

  <form class="time-log-form" data-task-id="{{task.id}}">
    <div class="form-row">
      <label for="preset-duration">Quick Select:</label>
      <select class="preset-duration" name="preset-duration">
        <option value="">Choose a duration...</option>
        {{#each presetDurations}}
          <option value="{{value}}">{{label}}</option>
        {{/each}}
      </select>
    </div>

    <div class="form-row">
      <label for="duration">Duration (minutes): <span class="required">*</span></label>
      <input 
        type="number" 
        class="duration-input" 
        name="duration" 
        min="1" 
        max="1440" 
        value="{{defaultDuration}}" 
        required
        placeholder="Enter minutes"
      >
      <div class="input-help">
        Time to add to this task (1-1440 minutes, max 24 hours)
      </div>
    </div>

    <div class="form-row">
      <label for="description">What did you work on?</label>
      <textarea 
        class="description-input" 
        name="description" 
        rows="3" 
        placeholder="Describe what you accomplished during this time (optional)"
      ></textarea>
      <div class="input-help">
        Optional description to help track progress
      </div>
    </div>

    <div class="request-info">
      <div class="info-box">
        <i class="fas fa-info-circle"></i>
        <div>
          <strong>Time Log Request Process:</strong>
          <ul>
            <li>Your request will be sent to the GM for review</li>
            <li>The GM can approve or modify the time entry</li>
            <li>You'll be notified when the time is logged</li>
            <li>Only accumulated time tasks accept time logging</li>
          </ul>
        </div>
      </div>
    </div>

    <div class="dialog-buttons">
      <button type="button" class="cancel-time-log">
        <i class="fas fa-times"></i> Cancel
      </button>
      <button type="submit" class="submit-time-log">
        <i class="fas fa-paper-plane"></i> Send Request
      </button>
    </div>
  </form>

  <div class="dialog-footer">
    <div class="requester-info">
      <strong>Requesting as:</strong> {{currentUser}}
    </div>
  </div>
</div>

<style>
